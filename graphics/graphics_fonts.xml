<root>
	<!-- Note: FGF tags processed first for FG Classic, and TTF tags processed first for FGU -->

	<!-- Default fonts - REQUIRED -->
	<font name="defaultstringcontrol" merge="join">
		<color value="#fdfdfd" />
	</font>
